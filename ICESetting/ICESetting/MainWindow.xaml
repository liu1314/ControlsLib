<Window x:Class="ICESetting.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ICESetting"
        xmlns:stage="clr-namespace:ICESetting.Stage"
        Title="MainWindow"
        Width="1080"
        Height="1920"
        AllowsTransparency="True"
        Background="Transparent"
        WindowState="Maximized"
        WindowStyle="None">

    <Window.LayoutTransform>
        <ScaleTransform x:Name="_scale" />
    </Window.LayoutTransform>
    <Grid>
        <stage:SettingStage x:Name="myStage" Loaded="myStage_Loaded" />

    </Grid>
</Window>