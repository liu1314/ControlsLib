<UserControl x:Class="ICESetting.Control.LawText"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Width="733"
             Height="789"
             Background="Transparent">
    <Grid>
        <TextBlock Margin="0,-60,0,0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Top"
                   FontFamily="微软雅黑"
                   FontSize="30"
                   FontWeight="Bold"
                   Foreground="White"
                   Text="TVM条款和条件" />
        <ScrollViewer x:Name="scroll">
            <TextBlock x:Name="_text"
                       Width="715"
                       FontFamily="微软雅黑"
                       FontSize="19"
                       Foreground="White"
                       LineHeight="30"
                       RenderTransformOrigin="0.5 0"
                       Text=""
                       TextAlignment="Left"
                       TextWrapping="Wrap">
                <TextBlock.RenderTransform>
                    <ScaleTransform x:Name="_scale" />
                </TextBlock.RenderTransform>
            </TextBlock>
            <!--  <Image x:Name="_img" Stretch="Fill" Grid.Row="1" Source="/Images/law.png" Width="715" />  -->
        </ScrollViewer>
    </Grid>
</UserControl>
